# shellcheck shell=bash disable=SC1091,SC2034 #xsh

# Section: Arg
WORK_DIR="$(x wsroot)"
# EndSection

# Section: Main
case "${1:=repo}" in
  boot)
      lerna bootstrap
  ;;
  *)
      cd "$WORK_DIR/vuepress-theme-gungnir/packages/theme/" &&
      yarn clean &&
      yarn build &&
      yarn copy &&
      cp -r "$WORK_DIR/vuepress-theme-gungnir/packages/theme/lib" "$WORK_DIR/node_modules/vuepress-theme-gungnir"
      cd "$WORK_DIR" || exit
  ;;
esac

# EndSection
# shellcheck shell=bash disable=SC1091,SC2034,SC2002,SC2154 #xsh

# Section: Arg
xrc ui
WORK_DIR="$(x wsroot)"
COMMIT_ID="$(git rev-parse --short HEAD)"
BRANCH_INFO="$(git symbolic-ref -q --short HEAD 2> /dev/null || git describe --tags --exact-match 2> /dev/null)"
DIST_PATH=$WORK_DIR/dist
TEMPLATE_PATH=$WORK_DIR/templates
PACKAGE_VERSION=template-${BRANCH_INFO}-${COMMIT_ID}
DOC_SEARCH_CONFIG_FILE=$WORK_DIR/blog/.vuepress/configs/docSearch/docSearchConfig.json
WEB_SIT="www.qbenben.com"

# Section: Function
build() {
    param:dsl       '
type:
    Type = all docs plugin clean
options:
    --p    "select target build command"        <>:Type
'
    param:run
    build_"${p}"
}

build_docs() {
		if [ -d "$TEMPLATE_PATH/$PACKAGE_VERSION" ];then
			cd "$TEMPLATE_PATH" &&
			rm -rf "${PACKAGE_VERSION}"* &&
			cd "$WORK_DIR" || exit
		fi
		rm -rf "$DIST_PATH"
		yarn docs:build &&
		mkdir -p "$TEMPLATE_PATH" &&
		cp -r "$DIST_PATH" "$TEMPLATE_PATH/${PACKAGE_VERSION}" &&
		cd "$TEMPLATE_PATH" &&
		zip -r "${PACKAGE_VERSION}.zip" "${PACKAGE_VERSION}" > /dev/null &&
		if [ -f "$TEMPLATE_PATH/$PACKAGE_VERSION.zip" ];then
			package_size="$(du -sh "$PACKAGE_VERSION" | awk '{ printf $1 }')"
			printf "%s\n%s\n%s\n%s\n%s\n%s\n" \
			"$(ui bold blue '----------------------------------------------------')"\
			"$(ui bold green 'üéâ Packaged successfully! üéâ')" \
			"üì¶ The package version is $(ui bold cyan "$PACKAGE_VERSION")" \
			"üíº The package address is $(ui bold yellow  underline "$TEMPLATE_PATH")" \
			"üìê The package size is $(ui bold magenta "$package_size")" \
			"$(ui bold blue '----------------------------------------------------')"
		fi
		cd "$WORK_DIR" || exit
}

build_clean() {
		npx lerna run clean
}

build_plugin() {
		npx lerna run build
}

build_all() {
		build_clean
		build_plugin
		build_docs
}

# Section: Main
case "${1}" in
    docs)   	build_docs      ;;
    plugin)   build_plugin    ;;
    clean)  	build_clean     ;;
    all)    	build_all       ;;
    *)      	build           ;;
esac
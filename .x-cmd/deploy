# shellcheck shell=bash disable=SC1091,SC2034 #xsh

# Section: Arg
WORK_DIR="$(x wsroot)"
GIT_URL=gitee.com/AAAben/qbenben.git
BRANCH_NAME=gh-page
# EndSection

# Section: Main
cd "$WORK_DIR"/docs/.vuepress/dist || exit
# 如果是发布到自定义域名
# echo 'www.x-cmd.com' > CNAME
git init
git remote add origin git@$GIT_URL
git checkout -b $BRANCH_NAME
git add -A
git commit -m 'deploy'
git push -f git@$GIT_URL $BRANCH_NAME
# EndSection
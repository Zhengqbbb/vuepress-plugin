{
  "scss.validate": false,
  "css.validate": true,
  "files.associations": {
    "**/*.awk": "awk",
    "**/*.json": "json",
    "**/*.md": "markdown",
    "**/*.yml": "yaml",
    "**/LICENSE": "TXT",
    "**/*": "shellscript",
    "**/.x-cmd/**": "shellscript"
},
  "tailwindCSS.includeLanguages": {
    "plaintext": "html",
    "vue": "html",
    "vue-html": "html",
  },
  "stylelint.config": {
    "rules": {
      "at-rule-no-unknown": [true, {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "layer",
          "variants",
          "responsive",
          "screen"
        ]
      }],
      "declaration-block-trailing-semicolon": null,
      "no-descending-specificity": null
    }
  }
}
{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "newLine": "lf",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2018"
  },
  "exclude": ["node_modules", ".temp", "lib", "dist"]
}

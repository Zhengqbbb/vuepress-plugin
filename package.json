{
  "name": "qb-vuepress-plugin",
  "private": true,
  "description": "qbenben's vuepress-next plugins",
  "license": "MIT",
  "author": "Zhengqbbb <zhengqbbb@gmail.com> (https://github.com/Zhengqbbb)",
  "scripts": {
    "build": "pnpm --filter=\"vuepress*\" --stream build && pnpm copy",
    "copy": "pnpm --filter=\"vuepress*\" --parallel --stream copy",
    "dev": "concurrently \"tsc -b ./tsconfig.build.json --watch\" \"pnpm run copy\"",
    "lint": "eslint .",
    "docs:build": "pnpm --filter=docs docs:build",
    "docs:dev": "pnpm --filter=docs docs:dev",
    "docs:serve": "pnpm --filter=docs docs:serve"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "czConfig": "./scripts/commitizen.cjs"
    }
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.25.2",
    "@types/node": "^18.0.5",
    "bumpp": "7.2.0",
    "cpx2": "^4.2.0",
    "concurrently": "^7.2.2",
    "conventional-changelog-cli": "^2.2.2",
    "cz-git": "^1.3.9",
    "esno": "^0.16.3",
    "eslint": "^8.19.0",
    "fast-glob": "^3.2.11",
    "js-yaml": "^4.1.0",
    "ora": "^6.1.2",
    "pathe": "^0.3.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4"
  },
  "engines": {
    "pnpm": ">=7"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search",
        "@types/react",
        "eslint-plugin-import",
        "eslint-plugin-n",
        "eslint-plugin-promise",
        "react",
        "react-dom",
        "webpack"
      ]
    }
  }
}

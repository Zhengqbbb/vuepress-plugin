{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "name": "qbenben-blog",
  "description": "qbenben's blog.",
  "license": "Apache-2.0",
  "author": "Qbenben <zhengqbbb@gmail.com>",
  "scripts": {
    "clean": "rimraf blog/.vuepress/.temp blog/.vuepress/.cache dist",
    "dev": "vuepress dev blog --clean-cache",
    "build": "yarn clean && vuepress build blog --clean-cache --dest dist",
    "docs:dev": "vuepress dev blog --clean-cache",
    "docs:build": "yarn clean && vuepress build blog --clean-cache --dest dist",
    "serve": "anywhere -h localhost -d dist",
    "commit": "cz"
  },
  "dependencies": {
    "vuepress-theme-gungnir": "2.0.0-alpha.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "anywhere": "^1.5.0",
    "cpx2": "^4.1.2",
    "cz-git": "^1.0.1",
    "lerna": "^4.0.0",
    "markdown-it-deflist": "^2.1.0",
    "markdown-it-task-lists": "^2.1.1",
    "rimraf": "^3.0.2",
    "vuepress": "^2.0.0-beta.35",
    "vuepress-vite": "2.0.0-beta.35",
    "vuepress-webpack": "2.0.0-beta.35"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}

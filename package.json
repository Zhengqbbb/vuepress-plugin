{
  "private": true,
  "name": "qbenben-blog",
  "description": "qbenben's blog.",
  "license": "Apache-2.0",
  "author": "Qbenben <zhengqbbb@gmail.com>",
  "scripts": {
    "build": "pnpm build:all && pnpm build:copy",
    "build:all": "pnpm -r --stream build",
    "build:copy": "pnpm --parallel --stream copy",
    "clean": "pnpm --parallel --stream clean",
    "dev": "concurrently \"tsc -b tsconfig.build.json --watch\" \"pnpm run dev:copy\"",
    "dev:copy": "pnpm build:copy --watch",
    "docs:build": "pnpm --filter=blog docs:build",
    "docs:clean": "pnpm --filter=blog docs:clean",
    "docs:dev": "pnpm --filter=blog docs:dev",
    "docs:serve": "pnpm --filter=blog docs:serve"
  },
  "devDependencies": {
    "@types/webpack-env": "^1.16.4",
    "bumpp": "^7.1.1",
    "cpx2": "^4.2.0",
    "cz-git": "^1.3.2",
    "concurrently": "^7.2.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.4",
    "vite": "~2.9.9"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search",
        "@types/react",
        "eslint-plugin-import",
        "eslint-plugin-n",
        "eslint-plugin-promise",
        "react",
        "react-dom",
        "webpack"
      ]
    }
  }
}
